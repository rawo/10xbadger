---
import Layout from "@/layouts/Layout.astro";

/**
 * Badge Applications List Page
 *
 * Temporary placeholder page for the applications list.
 * TODO: Implement full applications list view
 */

// Get error message from query params if redirected
const error = Astro.url.searchParams.get("error");
---

<Layout title="Badge Applications - Badger">
  <main class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold text-foreground mb-8">Badge Applications</h1>

      {
        error && (
          <div class="mb-6 rounded-lg border border-destructive bg-destructive/10 p-4">
            <p class="text-sm text-destructive">{decodeURIComponent(error)}</p>
          </div>
        )
      }

      <div class="rounded-lg border border-border bg-card p-6">
        <p class="text-muted-foreground">
          Applications list view coming soon. For now, you can navigate back to the dashboard.
        </p>
        <div class="mt-4">
          <a
            href="/"
            class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
          >
            Back to Dashboard
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
