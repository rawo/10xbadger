---
import Layout from "@/layouts/Layout.astro";
import { ForgotPasswordView } from "@/components/auth/ForgotPasswordView";

/**
 * Forgot Password Page
 *
 * Allows users to initiate password recovery by entering their email address.
 * A reset link will be sent to the provided email.
 *
 * Query Parameters:
 * - error: Error code to display (e.g., user_not_found, server_error)
 * - success: Whether the reset email was sent successfully
 */

const error = Astro.url.searchParams.get("error") || undefined;
const success = Astro.url.searchParams.get("success") === "true";
---

<Layout title="Forgot Password - 10xbadger">
  <ForgotPasswordView client:load error={error} success={success} />
</Layout>
